{
	"cSpell.words": [
		"authtype",
		"gatewayresponse",
		"jsonencode",
		"mamorimo",
		"nosniff",
		"openapi",
		"querystring",
		"redocly",
		"templatefile"
	],
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[terraform]": {
		"editor.defaultFormatter": "hashicorp.terraform"
	},
